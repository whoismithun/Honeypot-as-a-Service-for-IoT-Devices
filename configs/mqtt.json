    "camera/front": {
      "type": "sensor",
      "status": "active"
    },
    "alarm/status": {
      "type": "actuator",
      "state": "disarmed"
    },
    "admin/command": {
      "type": "admin"
    },
    "admin/config": {
      "type": "admin"
    },
    "admin/firmware": {
      "type": "admin"
    }
